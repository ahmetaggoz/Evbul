@model List<Ev>



<div class="row">
    <div class="col-12 p-4">
        <h2>Ev Listesi</h2>
        <a class="btn btn-primary" href="/evler/olustur">Yeni Ev Ekle</a>
        <table class="table tabled-bordered mt-3">
            <thead>
                <tr>
                    <th style="width: 200px;">Image</th>
                    <th>Başlık</th>
                    <th>Aktif Mi</th>
                    <th style="width: 125px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td><img src="/img/@item.Image" class="img-fluid" alt=""></td>
                        <td>@item.Baslik</td>
                        <td>@item.AktifMi</td>
                        <td>
                            <a href="/evler/edit/@item.EvId" class="btn btn-sm btn-primary">Edit</a>
                            <a href="/evler/delete/@item.EvId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>