<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/lib/bootstrap-icons/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/style.css">


    <title>Evbul</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-white shadow-sm">
        <div class="container">
            <a href="/evler" class="navbar-brand">
                <i class="bi bi-house"></i> Evbul
            </a>
            <form class="d-flex m-auto" asp-controller="Evler" asp-action="Index" method="get">
                <input class="form-control me-2" name="searchString" type="text" placeholder="Hayalinizdeki tatil" aria-label="Search">
                <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
            </form>
            <ul class="navbar-nav ms-auto">
                @if (User.Identity!.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a href="/evler/list" class="nav-link">Evler</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">@User.Identity.Name</a>
                    </li>
                    <li class="nav-item">
                        <a href="/kullanicilar/cikis" class="nav-link">Çıkış</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a href="/kullanicilar/giris" class="nav-link">Giriş</a>
                    </li>
                    <li class="nav-item">
                        <a href="/kullanicilar/kayit" class="nav-link">Kayıt</a>
                    </li>

                }

            </ul>
        </div>
    </nav>
    <div class="container mt-3">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
</body>

</html>